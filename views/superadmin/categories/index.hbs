<script src="{{cdn}}/js/select2.min.js"></script>
<div class="row ">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="page-title">
                    <i class="mdi mdi-account-child-circle text-info title_icon"></i> {{trs 'categories'}}
                    <button type="button" class="btn btn-outline-info btn-rounded alignToTitle"
                        onclick="largeModal('/categories/create', ' {{trs " create"}} {{trs "category"
                        }}', 'mdi mdi-clock text-info' )">
                        <span style="font-size: medium;"><i class="mdi mdi-plus"></i> {{trs 'create'}} {{trs
                            'category'}}</span>
                    </button>
                </h4>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body category_content">
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(() => {
        showAllCategories();
    });

    var showAllCategories = function () {
        var url = '/categories/list';

        $.ajax({
            type: 'GET',
            url: url,
            success: function (response) {
                //console.log('response', response)
                $('.category_content').html(response);
                initDataTable('basic-datatable');
            }
        });
    }
</script>
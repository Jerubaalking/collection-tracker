<script src="{{cdn}}/js/init.js"></script>
<form method="POST" class="d-block ajaxForm" action="{{action}}">
    <div class="form-row">
        <div class="form-group mb-2 col-md-6 offset-3">
            {{!-- <label>
                {{trs 'User'}} {{trs 'image'}}
            </label> --}}<small id="" class="form-text text-muted">
                {{trs 'provide'}} {{trs 'image'}} .png format
            </small>
            <div class="col-md-12 custom-file-upload">
                <div class="wrapper-image-preview" style="margin-left: -6px; ">
                    <div class="box" style="width: 230px; height:270px;">
                        <div class="js--image-preview"
                            style="height:220px; background-image: url({{#if user.upload}}{{image}}{{user.upload.path}}{{else}}{{{cdn 'public'}}}/images/avatar.jpg{{/if}}); background-color: #F5F5F5;">
                        </div>
                        <div class="upload-options">
                            <label for="user_image" class="btn" style="font-size:medium;"> <i
                                    class="mdi mdi-upload mr-1"></i> {{trs 'upload'}}
                                {{trs 'image'}}
                            </label>
                            <input id="user_image" style="visibility:hidden;" type="file" class="image-upload"
                                name="user_image" accept="image/png" onchange="">
                        </div>
                    </div>
                </div>
            </div>

            {{!-- <div class="form-group mt-2 col-md-12">
                <label for="user_image_cam" class="btn" style="font-size:medium;"> <i class="mdi mdi-upload mr-1"></i>
                    {{trs
                    'upload'}}
                    {{trs 'image'}}
                </label>
                <input id="user_image_cam" capture="camera" type="file" name="user_image_cam" accept="image/*"
                    onchange="">
                <button class="btn btn-block btn-light" type="submit">
                    <i class="mdi mdi-camera" style="font-weight: 600;"></i> {{trs 'camera'}}
                </button>
            </div> --}}
        </div>
        <div class="form-group mt-2 col-md-6">
            <button class="btn btn-block btn-info" type="submit">
                <i class="mdi mdi-save" style="font-weight: 600;"></i> {{trs 'save'}}
            </button>
        </div>
        <div class="form-group mt-2 col-md-6">
            <button class="btn btn-block btn-secondary" type="reset" data-dismiss="modal">
                cancel
            </button>
        </div>
    </div>
</form>

<script>
    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllUsers);
    });
</script>